<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="addenda_attribute_view_form" model="ir.ui.view">
        <field name="name">addenda.attribute.form</field>
        <field name="model">addenda.attribute</field>
        <field name="arch" type="xml">
            <form string="Addenda attribute Form">
                <group>
                    <field name="field_type" invisible='1' />
                    <field name="attribute" />
                    <field name="value" />
                    <field name='field_domain' invisible='1' />
                    <field name="field" domain="[('model', '=', field_domain), ('ttype', 'not in', ('many2many','one2many'))]" attrs="{'invisible': [('value','not in',('',False))]}" />
                    <field name='inner_field_domain' invisible='1' />
                    <field name='inner_field' domain="[('model', '=', inner_field_domain)]" attrs="{'invisible': [('field_type','!=','many2one'),'|',('field','in',('',False))], 'required': [('field_type', 'in', ('many2one', 'one2many', 'many2many'))]}" />
                </group>
            </form>
        </field>
    </record>

    <record id="addenda_attribute_view_list" model="ir.ui.view">
        <field name="name">addenda.attribute.list</field>
        <field name="model">addenda.attribute</field>
        <field name="arch" type="xml">
            <tree string="Addenda attribute Form">
                <field name="attribute" />
                <field name="value" />
                <field name="field" />
                <field name='inner_field' />
            </tree>
        </field>
    </record>

</odoo>
