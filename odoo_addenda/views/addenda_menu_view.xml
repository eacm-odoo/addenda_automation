<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.actions.act_window" id="addenda_list_action">
        <field name="name">Addenda</field>
        <field name="res_model">addenda.addenda</field>
        <field name="view_mode">tree,form,pivot</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                    Create a new addenda
            </p>
        </field>
    </record>

    <menuitem name="Odoo Addenda" id="menu_addenda" sequence="1" web_icon="odoo_addenda,static/description/icon.png"/>

    <menuitem id="menu_addenda_addenda" name="Addenda" parent="menu_addenda" sequence="2" action="addenda_list_action" />
</odoo>