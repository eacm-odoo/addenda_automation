<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="addenda_tag_view_form" model="ir.ui.view">
        <field name="name">addenda.tag.form</field>
        <field name="model">addenda.tag</field>
        <field name="arch" type="xml">
            <form string="Addenda Form">
                <group>
                    <field name="field_type" invisible='1' />
                    <field name="len_tag_childs" invisible='1' />
                    <field name="tag_name" />
                    <field name="is_condition" attrs="{'invisible': ['|', ('value','not in',('',False)),('field','not in',('',False))]}"/>
                    <field name="is_field_domain_for_attributes" attrs="{'invisible': ['|', ('field_type','not in',('one2many','many2many')), ('is_condition', '=', True)]}" />
                    <field name="addenda_tag_childs_ids" attrs="{'invisible': ['|', ('field_type','in',('one2many','many2many')), ('is_condition', '=', True)]}" />
                    <field name="attribute_ids" attrs="{'invisible': ['|', ('is_condition', '=', True), ('field_type','in',('one2many','many2many')),('is_field_domain_for_attributes','=', False)]}" />
                    <field name="value" attrs="{'invisible': ['|', ('len_tag_childs','>',0), ('is_condition', '=', True)]}" />
                    <field name="field" attrs="{'invisible': ['|','|',('value','not in',('',False)),('len_tag_childs','>',0), ('is_condition', '=', True) ]}" />
                    <field name="condition_ids" attrs="{'invisible': [('is_condition', '=', False)]}" />
                    <field name='inner_field_domain' invisible='1' />
                    <field name='inner_field' domain="[('model', '=', inner_field_domain),('ttype', 'not in', ('binary', 'html', 'many2one_reference','many2one','many2many','one2many'))]" attrs="{'invisible': ['|', ('field_type','not in',('many2one','one2many','many2many')),('is_field_domain_for_attributes','=', True)], 'required': [('field_type', 'in', ('many2one', 'one2many', 'many2many')),('is_field_domain_for_attributes','=', False)]}" />
                    <field name="preview" widget="ace" class="oe-bordered-editor" options="{'style-inline': true, 'codeview': true }" />
                </group>
            </form>
        </field>
    </record>

    <record id="addenda_customed_tag_view_list" model="ir.ui.view">
        <field name="name">addenda.tag.list</field>
        <field name="model">addenda.tag</field>
        <field name="arch" type="xml">
            <tree string="Addenda Form">
                <field name="tag_name" />
                <field name="addenda_tag_childs_ids" />
                <field name="value" />
                <field name="field" />
                <field name='inner_field' />
            </tree>
        </field>
    </record>

</odoo>
