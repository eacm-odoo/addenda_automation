<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="addenda_node_view_form" model="ir.ui.view">
        <field name="name">addenda.node.form</field>
        <field name="model">addenda.node</field>
        <field name="arch" type="xml">
            <form string="Addenda Form">
                <group>
                    <field name="field_type" invisible='True' />
                    <field name="nodes" />
                    <field name="cfdi_attributes" />
                    <field name="attribute_value" />
                    <field name="all_fields" attrs="{'invisible': [('attribute_value', 'not in', ('',False))]}" />
                    <field name='inner_field' attrs="{'invisible': [('field_type','!=','many2one'),'|',('all_fields','in',('',False))]}" />
                    <field name="attribute_options" />
                </group>
            </form>
        </field>
    </record>

    <record id="addenda_customed_nodes_view_list" model="ir.ui.view">
        <field name="name">addenda.node.list</field>
        <field name="model">addenda.node</field>
        <field name="arch" type="xml">
            <tree string="Addenda Form">
                <field name="nodes" string="Nodes" />
                <field name="path" />
                <field name="all_fields" />
            </tree>
        </field>
    </record>

</odoo>