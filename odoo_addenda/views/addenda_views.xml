<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="addenda_view_form" model="ir.ui.view">
        <field name="name">addenda.addenda.form</field>
        <field name="model">addenda.addenda</field>
        <field name="arch" type="xml">
            <header>
                <button string="Export" type="object" name="action_export_zip" class="oe_highlight" states="done" />
                <field name="state" widget="statusbar" />
            </header>
            <form string="Addenda Form" class="o_form_sheet addenda_form">
               
                <sheet class="addenda_sheet">
                    <h1>
                        <group>
                            <field name="name" />
                        </group>
                    </h1>
                    <group>
                        <field name="is_customed_addenda" />
                    </group>
                    <notebook>
                        <page string="Addenda Nodes" attrs="{'invisible': [('is_customed_addenda', '=', False)]}">
                            <field name="is_customed_addenda" invisible='1'></field>
                            <field name="nodes_ids" />
                            <field name="node_main_preview" widget="ace" class="oe-bordered-editor" options="{'style-inline': true, 'codeview': true }" />
                        </page>
                        <page string="Addenda xml" attrs="{'invisible': [('is_customed_addenda', '=', True)]}">
                            <field name="is_customed_addenda" invisible='1'></field>
                            <group>
                                <field name="is_expression" />
                                <field name="tag_name" attrs="{'invisible': [('is_expression', '=', True)]}" />
                                <field name="namespace" attrs="{'invisible': [('is_expression','=',True)], 'required': [('namespace_value', 'not in', ('',False))]}" />
                                <field name="namespace_value" attrs="{'invisible': [('is_expression','=',True)], 'required': [('namespace', 'not in', ('', False))]}" />
                                <field name="addenda_tag_id" attrs="{'invisible': [('is_expression', '=', True)]}" />
                                <field name="addenda_expression" widget="ace" class="oe-bordered-editor" options="{'style-inline': true, 'codeview': true }" attrs="{'invisible': [('is_expression', '=', False)]}" />
                            </group>
                        </page>
                        <page string="Create Fields">
                            <group>
                                <field name="fields" />
                            </group>
                        </page>
                    </notebook>
                </sheet>


                
            </form>
            <div class="o_form_sheet addenda_preview">
                <h2> Preview </h2>
                <field name="main_preview" widget="ace" class="oe-bordered-editor" options="{'style-inline': true, 'codeview': true }" attrs="{'invisible': [('is_expression', '=', True)]}" />

            </div>

        </field>
    </record>
    <record id="addenda_view_tree" model="ir.ui.view">
        <field name="name">addenda.addenda.tree</field>
        <field name="model">addenda.addenda</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
            </tree>
        </field>
    </record>

</odoo>
